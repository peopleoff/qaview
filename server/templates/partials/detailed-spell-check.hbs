<!-- Detailed Spell Check Analysis -->
<div class="mb-8">
    <h2 class="text-xl font-semibold mb-4 text-muted-foreground">Detailed Spelling & Grammar Analysis</h2>
    {{#each emailData.spellErrors}}
    <div class="mb-4 border border-gray-200 rounded p-4">
        <h3 class="text-lg font-medium text-muted-foreground mb-2">Error {{add @index 1}}</h3>
        <div class="grid grid-cols-1 gap-4 text-sm">
            <div><strong>Misspelled Word:</strong>
                <code class="bg-red-100 text-red-800 px-2 py-1 rounded">{{word}}</code>
            </div>
            <div><strong>Context:</strong> {{context}}</div>
            {{#if (parseSuggestions suggestions)}}
            <div><strong>Suggestions:</strong> {{join (parseSuggestions suggestions) ", "}}</div>
            {{/if}}
        </div>
    </div>
    {{/each}}
</div>