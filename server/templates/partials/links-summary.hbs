<div class="mb-6">
    <h3 class="text-lg font-medium mb-2 text-muted-foreground">Links Overview</h3>
    {{#if emailData.links.length}}
    <table class="utm-table text-xs w-full">
        <thead class="bg-gray-100">
            <tr>
                <th class="text-left">Text</th>
                <th class="text-left">Status</th>
                <th class="text-left">utm_medium</th>
                <th class="text-left">utm_campaign</th>
                <th class="text-left">utm_source</th>
                <th class="text-left">utm_content</th>
            </tr>
        </thead>
        <tbody>
            {{#each emailData.links}}
            <tr>
                <td class="font-medium" style="max-width: 200px; word-break: break-all;">
                    {{#if text}}{{text}}{{else}}{{#if finalUrl}}{{finalUrl}}{{else}}{{#if
                    url}}{{url}}{{else}}N/A{{/if}}{{/if}}{{/if}}
                </td>
                <td>
                    <span class="{{getStatusColor status}}">
                        {{#if status}}{{status}}{{else}}N/A{{/if}}
                    </span>
                </td>
                <td>{{#if utmParams.utm_medium}}{{utmParams.utm_medium}}{{else}}-{{/if}}</td>
                <td>{{#if utmParams.utm_campaign}}{{utmParams.utm_campaign}}{{else}}-{{/if}}</td>
                <td>{{#if utmParams.utm_source}}{{utmParams.utm_source}}{{else}}-{{/if}}</td>
                <td>{{#if utmParams.utm_content}}{{utmParams.utm_content}}{{else}}-{{/if}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <p class="text-muted-foreground">No links found</p>
    {{/if}}
</div>