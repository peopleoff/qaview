<!-- Detailed Links Analysis -->
<div class="mb-8">
    <h2 class="text-xl font-semibold mb-4 text-muted-foreground">Detailed Links Analysis</h2>
    {{#each emailData.links}}
    <div class="mb-6 border border-gray-200 rounded p-4">
        <div class="mb-3">
            <h3 class="text-lg font-medium text-muted-foreground">Link {{add @index 1}}</h3>
            <div class="grid grid-cols-2 gap-4 mt-2 text-sm">
                <div><strong>Alt Text:</strong> {{#if text}}{{text}}{{else}}No alt text{{/if}}</div>
                <div><strong>Status:</strong> 
                    <span class="{{getStatusColor status}}">
                        {{#if status}}{{status}}{{else}}N/A{{/if}}
                    </span>
                </div>
                <div class="col-span-2" style="word-break: break-all; max-width: 100%; overflow-wrap: break-word;">
                    <strong>URL:</strong> {{#if url}}{{url}}{{else}}N/A{{/if}}
                </div>
                {{#if (and finalUrl (ne finalUrl url))}}
                <div class="col-span-2" style="word-break: break-all; max-width: 100%; overflow-wrap: break-word;">
                    <strong>Final URL:</strong> {{finalUrl}}
                </div>
                {{/if}}
            </div>
        </div>
<div class="flex gap-2 justify-between">
        {{#if (hasUtmParams utmParams)}}
        <div class="mb-3 flex-1">
            <h4 class="font-medium text-muted-foreground mb-2">UTM Parameters</h4>
            <table class="utm-table text-xs">
                <thead class="bg-gray-100">
                    <tr>
                        <th>Parameter</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each utmParams}}
                    <tr>
                        <td class="font-medium">{{@key}}</td>
                        <td>{{this}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{/if}}

        {{#if (lookup ../linkScreenshots id)}}
        <div>
            <h4 class="font-medium text-muted-foreground mb-2">Screenshot</h4>
            <img src="{{lookup ../linkScreenshots id}}" 
                 alt="Link screenshot" 
                 class="border border-gray-300 max-w-full h-auto"
                 style="max-width: 300px; max-height: 200px; object-fit: contain;">
        </div>
        {{/if}}
        </div>
    </div>
    {{/each}}
</div>