<!-- Attachments Section -->
<div class="mb-8">
    <h2 class="text-xl font-semibold mb-4 text-muted-foreground">Attachments</h2>
    {{#if emailData.attachments.length}}
    <div class="grid grid-cols-1 gap-4">
        {{#each emailData.attachments}}
        <div class="border border-gray-200 rounded p-4">
            <div class="flex items-start space-x-4">
                <!-- Preview -->
                <div class="flex-shrink-0 w-full">
                    {{#if (lookup ../attachmentUrls id)}}
                    <img src="{{lookup ../attachmentUrls id}}" alt="{{originalName}}"
                        class="w-full h-full object-cover rounded border" style="max-width: 100%; max-height: 100%;">
                    {{else}}
                    <div class="w-24 h-24 bg-gray-100 rounded border flex items-center justify-center">
                        <span class="text-xs text-gray-500">No preview</span>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <p class="text-muted-foreground">No attachments found</p>
    {{/if}}
</div>