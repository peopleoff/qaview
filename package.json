{
  "name": "qaview",
  "version": "0.3.0",
  "description": "Email QA and analysis tool for marketing teams",
  "author": "QAView",
  "type": "module",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "dev:electron": "nuxt dev --electron",
    "electron:dev": "electron .",
    "electron:build": "npm run generate && electron-builder --publish never",
    "electron:build:prod": "npm run generate && electron-builder --publish never --mac --win --linux",
    "release:build": "npm run generate && electron-builder --publish never",
    "release:publish": "npm run generate && electron-builder --publish always",
    "icons:generate": "node scripts/generate-icons.js",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "patch-package && nuxt prepare && electron-builder install-app-deps",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@nuxt/ui": "^4.0.1",
    "@types/handlebars": "^4.0.40",
    "@types/yauzl": "^2.10.3",
    "better-sqlite3": "^12.4.1",
    "drizzle-orm": "^0.44.6",
    "handlebars": "^4.7.8",
    "mailparser": "^3.7.5",
    "nuxt": "^4.1.3",
    "nuxt-mcp": "^0.2.4",
    "playwright": "^1.49.0",
    "typo-js": "^1.3.1",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.9.1",
    "drizzle-kit": "^0.31.5",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "nuxt-electron": "^0.7.0",
    "patch-package": "^8.0.1",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
